@model WebApplication1.Models.TestFormViewModel

@{
    ViewData["Title"] = "Form";
    var hasil = new List<string>();
    if (TempData["hasil"] != null)
    {
        hasil = TempData["hasil"] as List<string>;

    }
}

<h1>Form</h1>

<h4>TestFormViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Generate segitiga" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

 <p>hasil</p>
@foreach (var item in hasil)
{
  <p>@item</p>
}
   

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
